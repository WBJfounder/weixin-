.slide-image{
  width: 100%;
  height: 100%;
  
}
.navigator-hover {
   animation: rotate(180);
    color:red;
}
.scr{
  white-space: nowrap;
  display: flex;
  height: 90rpx;
  width:100%;
  box-sizing: border-box;
  

}
.scroll-x{
  height:90rpx;
  line-height: 90rpx;
  width: 15%;
  margin:0 25rpx;
  text-align: center;
  cursor:pointer;
  display: inline-block;
}
.news{
  display: flex;
  width:100%; 
  height: 300rpx;
  margin-top:20rpx;
  border:2rpx solid #C0C0C0;
  box-shadow: 1rpx 4rpx 5rpx #888;
  box-sizing: border-box;
}
.news-item{
  flex: 1;
}
.img{
  height: 100%;
  width: 45%;
}
.tt{
  flex:1;
  width: 40%;
  padding:10rpx 10rpx;
  display: flex;
  flex-direction: column;
  
}
.top{
  flex:1;
}
.down{
  width: 100%;

}
.img image{
  width:100%;
  height:100%;
}




